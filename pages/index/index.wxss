/**index.wxss**/

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.search {
  width: 100%;
  height: 70rpx;
  border-radius: 35rpx;
  background-color: #f7f7f7;
  justify-content: center;
  align-items: center;
  display: flex;
  margin-bottom: 10rpx;
}

.child {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.searchinput {
  width: 125rpx;
  margin-left: 10rpx;
}

.banner {
  height: 400rpx;
  margin-bottom: 15rpx;
  width: 100%;
  box-shadow: 12rpx 12rpx 15rpx #eaeaea;
  border-radius: 5px;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.icon-container {
  background-color: white;
  height: 100px;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  padding-top: 5px;
}

.icon-item {
  flex: 0 0 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.icon-text {
  margin-top: 25rpx;
  font-size: 30rpx;
}

.notice-container{
  display: flex;
  width: 100%;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.notice-item{
  display: flex;
  align-items: center;
}
.notice-icon{
  height: 35rpx;
  width: 80rpx;
}
.notice-text{
  display: flex;
  font-size: 30rpx;
  align-items: center;
  text-align: center;
}

.header {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  background-color: #2a9df4;
  color: white;
  width: 100%;
  height: 40px;
}

.more-button {
  position: absolute;
  right: 10px;
  background-color: #65addf;
  border-radius: 10px;
  color: white;
  font-size: 14px;
  height: 30px;
  padding: 5px 10px;
  align-items: center;
  display: inline-flex;
}



.section {
  margin-bottom: 20px;
  background: linear-gradient(to bottom, #2a9df4 40%, #ffffff 40%);
  width: 100%;
}
.product-list {
  padding: 10px 0;
}
.goods-list-horizontal {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.card1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  height: 380rpx;
  border-radius: 10px;
  background: white;
  box-shadow: 0px 4px 10px #eaeaea;
  margin: 5px;
  box-sizing: border-box; 
}
.goods-item1{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 45%;
  height: 500rpx;
  border-radius: 5px;
  background: white;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  margin: 5px;
  box-sizing: border-box; 
}
.product-image1 {
  width: 100%;
  height: 70%;
}
.product-image {
  width: 100%;
  height: 70%;
}

.product-name {
  margin: 10px 0;
  margin-left: 10px;
  margin-right: auto;
  font-weight: bold;
}

.product-price {
  color: red;
  margin-left: 5px;
  margin-right: auto;
}

.section1 {
  margin-bottom: 20px;
  background-color: white;
  width: 100%;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}

.section-title1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid #f7f7f7;
  height: 70rpx;
}

.title {
  font-size: 18px;
  margin-left: 5px;
}

.view-more {
  font-size: 14px;
  color: #737373;
  margin-right: 5px;
  font-weight: bolder;
}


.product {
  display: flex;
  /* align-items: center; */
  border-bottom: 2px solid #f7f7f7;
  padding: 10px;
  height: 300rpx;
}

.product-image2 {
  width: 270rpx;
  height: 270rpx;
  margin-right: 10px;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 80%;
}

.product-title {
  font-size: 18px;
}

.product-desc {
  font-size: 14px;
  color: #666;
}

.product-price {
  color: red;
  font-size: 18px;
}

.cart-icon {
  width: 30px;
  height: 30px;
  margin-left: auto;
  margin-right: 15px;
  margin-top: auto;
  margin-bottom: 20px;
}